<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <meta name="description" content="{{ meta_description }}">
        <meta name="author" content="{{ meta_author }}">
        <link rel="icon" href="../../favicon.ico">

        <title>{% spaceless %}{% block pageTitle %}Casper{% endblock %}{% endspaceless %}</title>

        <!-- Bootstrap core CSS -->
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>

        <link href="http://getbootstrap.com/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('bundles/polcodecasper/css/bootswatch.css') }}" >
        <link rel="stylesheet" href="{{ asset('bundles/polcodecasper/css/main.css') }}" >
        <link rel="stylesheet" href="{{ asset('bundles/polcodecasper/css/navbar.css') }}" >
        <link rel="stylesheet" href="{{ asset('bundles/polcodecasper/css/hover.css') }}" >
        <link rel="stylesheet" href="{{ asset('bundles/polcodecasper/css/font-awesome.min.css') }}" >



        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body>

        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a href="../" class="navbar-brand">Casper</a>
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
    
                <div class="navbar-collapse collapse" id="navbar-main">
                    <ul class="nav navbar-nav navbar-right ">
                        
                        <li class="{{ app.request.get('_route') == 'casper_index' ? 'active' : 'hvr-underline-reveal' }}">
                            <a href="{{ path('casper_index') }}">
                                <i class="fa fa-home"></i> Home
                            </a>
                        </li>
                        {% if not app.user %}
                            <li class="{{ app.request.get('_route') == 'fos_user_security_login' ? 'active' : 'hvr-underline-reveal' }}">
                                <a href="{{ path('fos_user_security_login') }}">
                                    <i class="fa fa-sign-in"></i> Login
                                </a>
                            </li>
                            <li class="{{ app.request.get('_route') == 'fos_user_registration_register' ? 'active' : 'hvr-underline-reveal' }}">
                                <a href="{{ path('fos_user_registration_register') }}" >
                                <i class="fa fa-key"></i></i> Register
                            </a>
                            </li>
                        {% endif %}

                        {# User menu for logged users #}
                        {% if app.user %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> {{ app.user.username }} <strong class="caret"></strong></a>
                                <ul class="dropdown-menu">
                                        <li> <a href="#"><i class="fa fa-cube icon-pullright"></i> My profile</a> </li>
                                    <li class="divider"></li>
                                    
                                        <li> <a href="#"><i class="fa fa-calendar icon-pullright"></i> My Events</a> </li>
                                        <li> <a href="{{ path('casper_newEvent') }}"><i class="fa fa-plus icon-pullright"></i> New Event</a> </li>
                                    <li class="divider"></li>
                                        <li>
                                            <a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out icon-pullright"></i> Logout</a>
                                        </li>
                                </ul>
                            </li>
                        {% endif %}
                    </ul>
                            
                        

                </div>
            </div>
        </div>


        <!-- Begin page content -->
        <div class="container">
            <div class="row clearfix top-buffer">
    
                <div class="col-md-12 column">
                    
                    <div class="row clearfix">
                        <div class="col-md-8 column">
                            
                            {% for label, flashes in app.session.flashbag.all %}
                                {% for flash in flashes %}
                                    <div class="alert alert-{{ label }}">
                                        {{ flash }}
                                    </div>
                                {% endfor %}
                            {% endfor %}
                            
                            {% block container %}
                            {% endblock %}
                            
                        </div>
                            
                        <div class="col-md-3 col-md-offset-1 column">
                            
                            <div class="well well-sm">
                                
                                <h4>About</h4>
                                <p>Etiam porta <em>sem malesuada magna</em> mollis euismod. Cras mattis consectetur purus sit amet fermentum. Aenean lacinia bibendum nulla sed consectetur.</p>
                            </div>
                            <div class="sidebar-module">
                                <h4>Upcoming events</h4>
                                <ol class="list-unstyled">
                                    <li><a href="#">March 2014</a></li>
                                    <li><a href="#">February 2014</a></li>
                                    <li><a href="#">January 2014</a></li>
                                    <li><a href="#">December 2013</a></li>
                                    <li><a href="#">November 2013</a></li>
                                    <li><a href="#">October 2013</a></li>
                                    <li><a href="#">September 2013</a></li>
                                    <li><a href="#">August 2013</a></li>
                                    <li><a href="#">July 2013</a></li>
                                    <li><a href="#">June 2013</a></li>
                                    <li><a href="#">May 2013</a></li>
                                    <li><a href="#">April 2013</a></li>
                                </ol>
                            </div>
                            <div class="sidebar-module">
                                <h4>Elsewhere</h4>
                                <ol class="list-unstyled">
                                    <li><a href="#">GitHub</a></li>
                                    <li><a href="#">Twitter</a></li>
                                    <li><a href="#">Facebook</a></li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <footer class="casper-footer">
      <p class="text-muted">Lukasz Malicki @ PolCode {{ 'now'|date('Y') }}</p>
      <p>
        <a href="#">Back to top</a>
      </p>
    </footer>


        <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
        
        
        <script src="http://getbootstrap.com/assets/js/ie10-viewport-bug-workaround.js"></script>
    </body>
</html>
