<div class="row">
    <div class="col-md-9" >
        <h3>{{ event.eventName }}</h3>
    </div>
    <div class="col-md-3" style="padding-top:20px;">
        <button type="button" class="btn btn-info" name="event close">
            <i class="fa fa-times"></i>
        </button>
    </div>
    <div class="col-md-12"><h5>{{ event.location }}</h5></div>
</div>
<hr>
<div class="row">
    <div class="col-md-12" >
        {{ event.description }}
    </div>
</div><br>
<div class="row">
    <div class="col-md-12" >
        <table class="table table-striped table-condensed">
            <tbody>
                <tr>
                    <td>Event start</td>
                    <td>{{ event.eventStart|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <td>Event end</td>
                    <td>{{ event.eventStop|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <td>Sign up untill</td>
                    <td>
                        {% if event.EventSignUpTimeleft %}
                            {% if event.EventSignUpTimeleft > (2*24*60) %}
                                {% set class = 'success' %}
                            {% elseif event.EventSignUpTimeleft > (1*24*60) %}
                                {% set class = 'info' %}
                            {% else %}
                                {% set class = 'warning' %}
                            {% endif %}
                            <span class="label label-{{ class }}" data-toggle='title' title='{{ event.eventSignUpEndDate|date('Y-m-d H:i:s') }}' >
                                {{event.getEventSignUpTimeleft('time')}} left
                            </span>

                        {% else %}
                            <span class="label label-danger" data-toggle='title' title='{{ event.eventSignUpEndDate|date('Y-m-d H:i:s') }}'>Time has left</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td>Guests</td>
                    <td>0 / {{ event.maxGuests }}</td>
                </tr>
                <tr>
                    <td>Geo</td>
                    <td>{{ event.latitude |slice(0,6)}} / {{ event.longitude|slice(0,6) }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-md-12" >
        <a class="btn btn-primary btn-sm center-block" href="{{ path('casper_eventView') }}/{{event.id}}" role="button">View details</a>
    </div>
</div>